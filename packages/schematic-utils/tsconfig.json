{
  "main": "index.js",
  "compilerOptions": {
    "lib": ["es2017", "dom"],
    "declaration": true,
    "module": "commonjs",
    "rootDir": "./src",
    "outDir": "./dist/schematics-utils",
    "moduleResolution": "node",
    "noUnusedParameters": true,
    "noEmitOnError": true,
    "strict": true,
    "skipDefaultLibCheck": true,
    "skipLibCheck": true,
    "sourceMap": true,
    "target": "es6",
    "types": ["jest", "node"]
  },
  "include": ["src/**/*"],
  "exclude": ["src/*/files/**/*"]
}
